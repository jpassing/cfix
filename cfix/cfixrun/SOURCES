BSCMAKE_FLAGS=$(BSCMAKE_FLAGS) /n

MSC_WARNING_LEVEL=/W4 /WX /Wp64

INCLUDES=..\..\include;..\..\..\..\Jpdiag\include

!if "$(TARGET_DIRECTORY)"=="i386"
USER_C_FLAGS=/D_UNICODE /DUNICODE /analyze
!else
USER_C_FLAGS=/D_UNICODE /DUNICODE
!endif

UMTYPE=console
UMENTRY=wmain
USE_MSVCRT=1

TARGETNAME=cfixrun
TARGETPATH=..\..\bin\$(DDKBUILDENV)
TARGETTYPE=LIBRARY
SOURCES=\
	cmdline.c \
	main.c \
	display.c \
	output.c \
	formatter.c \
	execctx.c \
	runtest.c \
	dllsearch.c