INCLUDES=..\..\include;..\..\..\Jpht\Include;$(SDK_INC_PATH)\..\mfc42

MSC_WARNING_LEVEL=/W4 /WX /Wp64

!if "$(TARGET_DIRECTORY)"=="i386"
USER_C_FLAGS=/wd4276 /analyze /DCFIX_KERNELMODE
TARGETNAME=cfixkr32
!else
USER_C_FLAGS=/wd4276 /DCFIX_KERNELMODE
TARGETNAME=cfixkr64
!endif

TARGETLIBS=$(DDK_LIB_PATH)\aux_klib.lib \
		   $(MAKEDIR)\..\..\..\Jpht\bin\$(DDKBUILDENV)\$(TARGET_DIRECTORY)\jpht.lib
		   
TARGETPATH=..\..\bin\$(DDKBUILDENV)
TARGETTYPE=DRIVER

SOURCES=\
	main.c \
	drvconn.c \
	drvconnreg.c \
	drvtestadp.c \
	rptstubs.c \
	stacktrace.c \
	util.c \
	cfixkr.rc